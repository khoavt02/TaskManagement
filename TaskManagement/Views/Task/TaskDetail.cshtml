@{
    @model TaskManagement.Models.Task
    ViewData["Title"] = "Quản lý công việc";
}
<h1 class="h3 mb-3">Công việc</h1>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0 fw-bolder">Chi tiết công việc</h5>
            </div>
            <div class="card-body">
                <form id="validation-form">
                    <input type="hidden" id="task_id" value="@Model.Id"/>
                    <input type="hidden" id="project_id" value="@Model.ProjectId"/>
                    <div class="row">
                        <div class="col-12 col-xl-6">
                            <div class="form-group">
                                <label class="form-label" for="project_name">Thuộc dự án:</label>
                                <input type="text" disabled class="form-control" id="project_name" name="project_name" value="@ViewBag.projectName">
                            </div>
                        </div>
                        <div class="col-12 col-xl-6">
                            <div class="form-group">
                                <label class="form-label">Tên công việc</label>
                                <input type="text" class="form-control" id="task_name" name="task_name" value="@Model.TaskName">
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Mô tả</label>
                        <textarea rows="4" class="form-control" id="task_description" name="task_description" value="@Model.Description"></textarea>
                    </div>
                    <div class="row">
                        <div class="col-12 col-xl-6">
                            <div class="form-group">
                                <label class="form-label">Thời gian bắt đẩu</label>
                                <div class="input-group date">
                                    @if (Model.StartTime is DateTime startTime)
                                    {
                                        <input type="date" id="start_date" value="@startTime.ToString("yyyy-MM-dd")" class="form-control datetimepicker-input">
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-xl-6">
                            <div class="form-group">
                                <label class="form-label">Thời gian kết thúc</label>
                                <div class="input-group date">
                                    @if (Model.EndTime is DateTime endTime)
                                    {
                                        <input type="date" id="start_date" value="@endTime.ToString("yyyy-MM-dd")" class="form-control datetimepicker-input">
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 col-xl-6">
                            <div class="form-group">
                                <label class="form-label" for="estimate_time">Thời gian thực hiện(h):</label>
                                <input type="number" class="form-control" id="estimate_time" name="estimate_time" value="@Model.EstimateTime">
                            </div>
                        </div>
                        <div class="col-12 col-xl-6">
                            <div class="form-group">
                                <label class="form-label" for="department">Phòng ban thực hiện:</label>
                                <select class="form-control select2" id="department" data-toggle="select2">
                                    @if (ViewBag.lstDepartments != null)
                                    {
                                        foreach (var item in ViewBag.lstDepartments)
                                        {
                                            if (item.DepartmentCode == ViewBag.department)
                                            {
                                                <option value="@item.DepartmentCode">@item.DepartmentName</option>
                                            }
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="users">Nhân viên thực hiện:</label>
                        <select class="form-control select2" id="users" data-toggle="select2" multiple="">
                            <option value="">--Chọn nhân viên thực hiện--</option>
                            @if (ViewBag.lstUsers != null)
                            {
                                foreach (var item in ViewBag.lstUsers)
                                {
                                    bool isSelected = Model != null && Model.AssignedUser.Contains(item.UserCode);

                                    <option value="@item.UserCode" selected="@isSelected">@item.UserName</option>
                                }
                            }
                        </select>

                    </div>
                    <div class="row">
                        <div class="col-12 col-xl-6">
                            <div class="form-group">
                                <label class="form-label" for="status">Trạng thái:</label>
                                <select class="form-control select2" id="status" data-toggle="select2">
                                    <option value="" selected="@(string.IsNullOrEmpty(Model.Status))">--Chọn trạng thái--</option>
                                    <option value="NEW" selected="@(Model.Status == "NEW")">Chưa thực hiện</option>
                                    <option value="PROCESSING" selected="@(Model.Status == "PROCESSING")">Đang thực hiện</option>
                                    <option value="COMPLETE" selected="@(Model.Status == "COMPLETE")">Hoàn thành</option>
                                    <option value="EVULATED" selected="@(Model.Status == "EVULATED")">Đã đánh giá</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-12 col-xl-6">
                            <div class="form-group">
                                <label class="form-label" for="proccess">Tiến độ:</label>
                                <input type="number" class="form-control" id="proccess" name="procces" value="@Model.ProcessPercent">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 col-xl-6">
                            <div class="form-group">
                                <label class="form-label" for="priority_level">Mức độ quan trọng:</label>
                                <select class="form-control select2" id="priority_level" data-toggle="select2">
                                    <option value="" selected="@(string.IsNullOrEmpty(Model.Level))">--Chọn mức độ--</option>
                                    <option value="IMPORTANT" selected="@(Model.Level == "IMPORTANT")">Quan trọng</option>
                                    <option value="HIGH" selected="@(Model.Level == "HIGH")">Cao</option>
                                    <option value="NORMAL" selected="@(Model.Level == "NORMAL")">Bình thường</option>
                                    <option value="LOW" selected="@(Model.Level == "LOW")">Thấp</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-12 col-xl-6">
                            <div class="form-group">
                                <label class="form-label" for="department">Điểm số:</label>
                                <input type="number" class="form-control" id="point" name="point" value="@Model.Points">
                            </div>
                        </div>
                    </div>
                    <div class="row mt-3 mb-3">
                        <div class="d-flex justify-content-between mb-2">
                            <h5 class="card-title mb-0 fw-bolder">Tiến độ công việc</h5>
                            <button type="button" class="btn btn-info" data-toggle="modal" data-target="#ModalAddProccess">+ Thêm tiến độ</button>
                        </div>
                        <table id="data-table" class="table table-striped" style="width:100%">
                        </table>
                    </div>
                    <div class="d-flex">
                        <div class="w-100">
                            <button type="submit" onclick="js_UpdateTask()" class="btn btn-primary float-right">Cập nhật</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="ModalAddProccess" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-md" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Báo cáo tiến độ</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body m-3">
                <div class="form-group">
                    <label class="form-label" for="proccess_percent">Tiến độ:</label>
                    <input id="proccess_percent" class="form-control" type="text" name="proccess_percent" value="">
                </div>
                <div class="form-group">
                    <label class="form-label" for="estimate">Thời gian thực hiện:</label>
                    <input id="proccess_estimate" class="form-control" type="text" name="proccess_estimate" value="">
                </div>
                <div class="form-group">
                    <label class="form-label" for="proccess_description">Mô tả:</label>
                    <textarea rows="3" class="form-control" id="proccess_description" name="proccess_description" placeholder="Nhập mô tả chi tiết"></textarea>
               </div>
                <div class="form-group">
                    <label class="form-label" for="proccess_file">File đính kèm:</label>
                    <input id="proccess_file" class="form-control" type="file" name="proccess_file" value="">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-primary" onclick="js_AddTaskProccesss()">Cập nhật</button>
            </div>
        </div>
    </div>
</div>
<script src="~/js/TaskDetail.js"></script>


