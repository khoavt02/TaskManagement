@{
	ViewData["Title"] = "Login";
	Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<meta name="description" content="Responsive Bootstrap 4 Admin &amp; Dashboard Template">
	<meta name="author" content="Bootlab">
	<script src="js\settings.js"></script>
	<style>
		body {
			opacity: 0;
		}
	</style>
	
	
</head>

<body>
	<main class="main d-flex w-100">
		<div class="container d-flex flex-column">
			<div class="row h-100">
				<div class="col-sm-10 col-md-8 col-lg-6 mx-auto d-table h-100">
					<div class="d-table-cell align-middle">

						<div class="text-center mt-4">
							<h1 class="h2">Task Management</h1>
							<p class="lead">
								Đăng nhập để thực hiện công việc ngay nào!
							</p>
						</div>

						<div class="card">
							<div class="card-body">
								<div class="m-sm-4">

									<form>
										<div class="form-group">
											<label>Tài khoản</label>
											<input class="form-control form-control-lg" type="text" name="account" id="account" placeholder="Nhập tài khoản">
										</div>
										<div class="form-group">
											<label>Mật khẩu</label>
											<input class="form-control form-control-lg" type="password" name="password" id="password" placeholder="Nhập mật khẩu">
											<small>
												<a href="pages-reset-password.html">Quên mật khẩu?</a>
											</small>
										</div>
										<div class="text-center mt-3">
											<a onclick="js_Login()" class="btn btn-lg btn-primary">Đăng nhập</a>
										</div>
									</form>
								</div>
							</div>
						</div>

					</div>
				</div>
			</div>
		</div>
	</main>
	<script src="~/js/app.js"></script>
	<script src="@Url.Content("~/lib/microsoft/signalr/dist/browser/signalr.js")"></script>
	<script src="~/js/Login.js"></script>
</body>

</html>
