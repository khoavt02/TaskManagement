@{
	Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<meta name="description" content="Responsive Bootstrap 4 Admin &amp; Dashboard Template">
	<meta name="author" content="Bootlab">

	<title>Đổi mật khẩu</title>

	
	
	<!-- PICK ONE OF THE STYLES BELOW -->
	<link href="~/css/classic.css" rel="stylesheet">
	<!-- <link href="css/corporate.css" rel="stylesheet"> -->
	<!-- <link href="css/modern.css" rel="stylesheet"> -->
	<!-- BEGIN SETTINGS -->
	<!-- You can remove this after picking a style -->
	<script src="~/js/settings.js"></script>
	<style>
		body {
			opacity: 0;
		}
	</style>
	

</head>

<body>
	<main class="main d-flex w-100">
		<div class="container d-flex flex-column">
			<div class="row h-100">
				<div class="col-sm-10 col-md-8 col-lg-6 mx-auto d-table h-100">
					<div class="d-table-cell align-middle">

						<div class="text-center mt-4">
							<h1 class="h2">Đổi mật khẩu</h1>

						</div>

						<div class="card">
							<div class="card-body">
								<div class="m-sm-4">

									<form>
										<div class="form-group">
											<label>Mật khẩu cũ:</label>
											<input class="form-control form-control-lg" type="password" name="old-password" id="old-password" placeholder="Nhập mật khẩu cũ">
										</div>
										<div class="form-group">
											<label>Mật khẩu mới:</label>
											<input class="form-control form-control-lg" type="password" name="new-password" id="new-password" placeholder="Nhập mật khẩu mới">
										</div>
										<div class="form-group">
											<label>Xác nhận khẩu mới:</label>
											<input class="form-control form-control-lg" type="password" name="re-password" id="re-password" placeholder="Nhập mật khẩu mới">
										</div>
										<div class="text-center mt-3">
											<a onclick="js_ChangPassword()" class="btn btn-lg btn-primary">Xác nhận</a>
											<!-- <button type="submit" class="btn btn-lg btn-primary">Sign in</button> -->
										</div>
									</form>
								</div>
							</div>
						</div>

					</div>
				</div>
			</div>
		</div>
	</main>
	<script src="~/js/app.js"></script>
	<script src="~/js/Login.js"></script>
	

</body>

</html>